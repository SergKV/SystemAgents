<Window x:Class="AgentsUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgentsUi"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="MainWindow" Height="800" Width="1300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="535*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        
        
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="745" Margin="5" VerticalAlignment="Top" Width="1050" ItemsSource="{Binding Tabs}">
            <TabControl.Resources>
                <DataTemplate DataType="{Binding Name}">
                </DataTemplate>
            </TabControl.Resources>
            
            
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
